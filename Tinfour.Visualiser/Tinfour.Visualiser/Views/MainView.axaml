<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Tinfour.Visualiser.ViewModels"
             xmlns:controls="clr-namespace:Tinfour.Visualiser.Controls"
             xmlns:conv="clr-namespace:Tinfour.Visualiser.Services"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="Tinfour.Visualiser.Views.MainView"
             x:DataType="vm:MainViewModel"
             Background="WhiteSmoke">
    <UserControl.Styles>
        <Style Selector="Button">
            <Setter Property="Background" Value="#4A4A4A" />
            <Setter Property="Foreground" Value="#E0E0E0" />
            <Setter Property="BorderBrush" Value="#6A6A6A" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="3" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="FontSize" Value="11" />
        </Style>
        <Style Selector="Button:hover">
            <Setter Property="Background" Value="#5A5A5A" />
        </Style>
        <Style Selector="Button:disabled">
            <Setter Property="Background" Value="#3E3E3E" />
            <Setter Property="Foreground" Value="#8A8A8A" />
        </Style>
        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="#E0E0E0" />
            <Setter Property="FontSize" Value="11" />
        </Style>
        <Style Selector="TextBlock.Header">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Margin" Value="0,10,0,5" />
        </Style>
        <Style Selector="Border.ControlGroup">
            <Setter Property="Padding" Value="10" />
            <Setter Property="BorderBrush" Value="#4A4A4A" />
            <Setter Property="BorderThickness" Value="0 0 0 1" />
        </Style>
        <Style Selector="Slider">
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style Selector="ComboBox">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
        </Style>
        <Style Selector="CheckBox">
            <Setter Property="Foreground" Value="#E0E0E0" />
            <Setter Property="FontSize" Value="11" />
        </Style>
    </UserControl.Styles>

    <Design.DataContext>
        <vm:MainViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="*,Auto">

        <Grid Grid.Row="0" ColumnDefinitions="*,350">

            <!-- Triangulation Canvas and Overlay -->
            <Grid Grid.Column="0">
                <Border ClipToBounds="True" Background="White" BorderBrush="#4A4A4A" BorderThickness="1" Margin="5">
                    <controls:TriangulationCanvas x:Name="triangulationCanvas"
                                                  Triangulation="{Binding Triangulation}"
                                                  InterpolationRaster="{Binding InterpolationResult.Bitmap, TargetNullValue={x:Null}}"
                                                  RasterBounds="{Binding InterpolationResult.Bounds, TargetNullValue={x:Null}}"
                                                  InterpolationOpacity="{Binding InterpolationOpacity}"
                                                  Contours="{Binding ContourResult.Contours, TargetNullValue={x:Null}}"
                                                  ContourRegions="{Binding ContourResult.Regions, TargetNullValue={x:Null}}"
                                                  ShowContours="{Binding ShowContours}"
                                                  ShowContourRegions="{Binding ShowContourRegions}"
                                                  ContourOpacity="{Binding ContourOpacity}"
                                                  ContourRegionOpacity="{Binding ContourRegionOpacity}"
                                                  VoronoiResult="{Binding VoronoiResult}"
                                                  ShowVoronoi="{Binding ShowVoronoi}"
                                                  ShowVoronoiPolygons="{Binding ShowVoronoiPolygons}"
                                                  ShowVertices="{Binding ShowVertices}"
                                                  ShowTriangles="{Binding ShowTriangles}"
                                                  ShowEdges="{Binding ShowEdges}"
                                                  VertexSize="{Binding VertexSize}"
                                                  EdgeWidth="{Binding EdgeWidth}"
                                                  UseTriangleCollector="{Binding UseTriangleCollector}" />
                </Border>

                <!-- Display Options Overlay -->
                <Border VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10"
                        Background="Gray" BorderBrush="DimGray" BorderThickness="1" CornerRadius="5"
                        Padding="10">
                    <StackPanel Orientation="Horizontal" Spacing="15" VerticalAlignment="Center">
                        <TextBlock Text="Display:" FontWeight="Bold" VerticalAlignment="Center"/>
                        <CheckBox Content="Vertices" IsChecked="{Binding ShowVertices}" VerticalAlignment="Center"/>
                        <CheckBox Content="Triangles" IsChecked="{Binding ShowTriangles}" VerticalAlignment="Center"/>
                        <CheckBox Content="Edges" IsChecked="{Binding ShowEdges}" VerticalAlignment="Center"/>
                        <CheckBox Content="Voronoi" IsChecked="{Binding ShowVoronoi}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>

            <GridSplitter Grid.Column="1" Width="5" Background="Transparent" HorizontalAlignment="Left" />

            <!-- Right Control Panel -->
            <ScrollViewer Grid.Column="1" Background="#333333" Padding="5">
                <StackPanel Orientation="Vertical" Spacing="8">
                    
                    <!-- Vertices Section -->
                    <Border Background="#3A3A3A" BorderBrush="#555555" BorderThickness="1" CornerRadius="4" Padding="8">
                        <StackPanel Orientation="Vertical" Spacing="4">
                            <TextBlock Text="VERTICES" FontWeight="Bold" FontSize="12" Foreground="#B0B0B0" Margin="0,0,0,5" />
                            
                            <!-- Generation Controls -->
                            <Border Classes="ControlGroup">
                                <StackPanel Orientation="Vertical" Spacing="4">
                                    <Button Content="Generate (pseudo) Random Vertices" Command="{Binding GenerateTerrainCommand}" IsEnabled="{Binding !IsGenerating}" />
                                    <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,3,0,0">
                                        <Button Content="Add Donut Constraint" Command="{Binding GenerateConstrainedTestCommand}" IsEnabled="{Binding !IsGenerating}" />
                                        <Button HorizontalAlignment="Right" Content="Clear" Command="{Binding ClearTriangulationCommand}" IsEnabled="{Binding !IsGenerating}" />
                                    </StackPanel>
                                    <CheckBox Content="Use Triangle Collector (constrained triangles only)" IsChecked="{Binding UseTriangleCollector}" Margin="0,5,0,0" />
                                    <Grid ColumnDefinitions="Auto,*,Auto" Margin="0,3,0,0">
                                        <TextBlock Grid.Column="0" Text="Points:" VerticalAlignment="Center" Margin="0,0,5,0" />
                                        <TextBlock Grid.Column="1" Text="{Binding PointCount}" VerticalAlignment="Center" />
                                    </Grid>
                                    <Slider Orientation="Horizontal" Minimum="3" Maximum="10000" Value="{Binding PointCount}" TickFrequency="100" />
                                </StackPanel>
                            </Border>

                            <!-- File Loading Controls -->
                            <Border Classes="ControlGroup" BorderThickness="0">
                                <StackPanel Orientation="Vertical" Spacing="4">
                                    <TextBlock Text="Load Vertices From .csv File" Classes="Header" />
                                    <Button Content="Load Vertices" Command="{Binding LoadVerticesCommand}" IsEnabled="{Binding !IsGenerating}" />
                                    <TextBlock Text="Format: latitude,longitude,depth" FontSize="11" Foreground="Yellow" Margin="5,0,0,5" TextWrapping="Wrap" />
                                    <Button Content="Load Constraints" Command="{Binding LoadConstraintsCommand}" IsEnabled="{Binding !IsGenerating}" />
                                    <TextBlock Text="Format: [index,]latitude,longitude (polygons)" FontSize="11" Foreground="Yellow" Margin="5,0,0,5" TextWrapping="Wrap" />
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Processing Section -->
                    <Border Background="#3A3A3A" BorderBrush="#555555" BorderThickness="1" CornerRadius="4" Padding="8">
                        <StackPanel Orientation="Vertical" Spacing="4">
                            <TextBlock Text="PROCESSING" FontWeight="Bold" FontSize="12" Foreground="#B0B0B0" Margin="0,0,0,5" />
                            
                            <!-- Interpolation Controls -->
                            <Border Classes="ControlGroup">
                                <StackPanel Orientation="Vertical" Spacing="4">
                                    
                                    <TextBlock Text="Raster Interpolation Method:" Margin="0,0,0,2" />
                                    <ComboBox SelectedItem="{Binding SelectedInterpolationType}" ItemsSource="{Binding AvailableInterpolationTypes}">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Converter={StaticResource InterpolationTypeConverter}}" />
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <CheckBox Content="Constrained regions only" IsChecked="{Binding ConstrainedInterpolationOnly}" Margin="0,5,0,0" />
                                    <Grid ColumnDefinitions="Auto,*,Auto" Margin="0,5,0,0">
                                        <TextBlock Grid.Column="0" Text="Opacity:" />
                                        <Slider Grid.Column="1" Value="{Binding InterpolationOpacity}" Minimum="0.1" Maximum="1.0" TickFrequency="0.1" IsSnapToTickEnabled="True" Margin="5,0" />
                                        <TextBlock Grid.Column="2" Text="{Binding InterpolationOpacity, StringFormat='{}{0:F1}'}" Width="30" />
                                    </Grid>
                                    <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,10,0,0">
                                        <Button Content="Generate Raster" Command="{Binding GenerateInterpolationCommand}" IsEnabled="{Binding !IsGenerating}" />
                                        <Button Content="Clear" Command="{Binding ClearInterpolationCommand}" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Contour Controls -->
                            <Border Classes="ControlGroup" BorderThickness="0">
                                <StackPanel Orientation="Vertical" Spacing="4">
                                    <TextBlock Text="Contours" Classes="Header" />
                                    <Grid ColumnDefinitions="Auto,*,Auto" Margin="0,0,0,5">
                                        <TextBlock Grid.Column="0" Text="Levels:" />
                                        <Slider Grid.Column="1" Value="{Binding ContourLevels}" Minimum="3" Maximum="25" TickFrequency="1" IsSnapToTickEnabled="True" Margin="5,0" />
                                        <TextBlock Grid.Column="2" Text="{Binding ContourLevels}" Width="30" />
                                    </Grid>
                                    <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,10,0,0">
                                        <Button Content="Generate Contours" Command="{Binding GenerateContoursCommand}" IsEnabled="{Binding !IsGenerating}" />
                                        <Button Content="Clear" Command="{Binding ClearContoursCommand}" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                    
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Status Panel at Bottom -->
        <Border Grid.Row="1" BorderBrush="#4A4A4A" BorderThickness="0,1,0,0" Background="#2C3E50" Padding="8" MinHeight="80" MaxHeight="200">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <TextBlock Text="{Binding StatusText}" TextWrapping="Wrap" FontFamily="Consolas" FontSize="11" Foreground="#E0E0E0" />
            </ScrollViewer>
        </Border>
    </Grid>

    <UserControl.Resources>
        <conv:InterpolationTypeConverter x:Key="InterpolationTypeConverter" />
    </UserControl.Resources>
</UserControl>
